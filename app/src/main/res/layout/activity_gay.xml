<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggay"
    tools:context=".Gay">

    <Button
        android:id="@+id/btnbkgay1"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/iconbkgay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <Button
        android:id="@+id/btnbkgayhm1"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/iconhmgay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <Button
        android:id="@+id/btnclipmakeup"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/iconoff"
        android:onClick="clickoff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65999997" />

    <Button
        android:id="@+id/btnclipaty"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/iconpary"
        android:onClick="clickpary"
        app:layout_constraintStart_toStartOf="@+id/btnclipmakeup"
        app:layout_constraintTop_toBottomOf="@+id/btnclipmakeup" />

</androidx.constraintlayout.widget.ConstraintLayout>